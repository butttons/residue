{
	"name": "@residue/installer",
	"version": "0.0.8",
	"private": true,
	"scripts": {
		"build:assets": "vite build",
		"build:worker": "cd ../worker && pnpm exec wrangler deploy --dry-run --outdir ../installer/.tmp-build",
		"build": "pnpm run build:assets && pnpm run build:worker && node scripts/build.mjs",
		"dev:assets": "vite build --watch",
		"dev": "pnpm run build:assets && wrangler dev --port 8790",
		"deploy": "pnpm run build && wrangler deploy",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"hono": "^4.7.0"
	},
	"devDependencies": {
		"@tailwindcss/vite": "^4.2.0",
		"tailwindcss": "^4.2.0",
		"typescript": "^5.5.2",
		"vite": "^7.1.9",
		"wrangler": "^4.65.0"
	}
}
