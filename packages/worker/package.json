{
	"name": "@residue/worker",
	"version": "0.0.8",
	"private": true,
	"scripts": {
		"build:assets": "vite build",
		"dev:assets": "vite build --watch",
		"deploy": "wrangler d1 migrations apply residue-app --remote && wrangler deploy",
		"dev": "wrangler dev --config wrangler.local.jsonc",
		"start": "wrangler dev",
		"test": "vitest",
		"typecheck": "tsc --noEmit",
		"cf-typegen": "wrangler types",
		"db:migrate": "wrangler d1 migrations apply residue-app --remote",
		"db:migrate:local": "wrangler d1 migrations apply residue-app --local"
	},
	"dependencies": {
		"@hono/zod-validator": "^0.7.6",
		"date-fns": "^4.1.0",
		"hono": "^4.7.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@residue/adapter": "workspace:*",
		"@cloudflare/vitest-pool-workers": "^0.12.4",
		"@tailwindcss/vite": "^4.1.17",
		"@types/node": "^25.2.3",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.5.2",
		"vite": "^7.1.9",
		"vitest": "~3.2.0",
		"wrangler": "^4.65.0"
	}
}
